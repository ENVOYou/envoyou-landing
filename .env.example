# Environment Variables for Envyou App
# Replace these with your actual values

# Domain Configuration
VITE_MAIN_DOMAIN=https://envoyou.com
VITE_APP_DOMAIN=https://app.envoyou.com
VITE_API_DOMAIN=https://api.envoyou.com
VITE_COOKIE_DOMAIN=.envoyou.com
VITE_COOKIE_SECURE=true
VITE_COOKIE_SAME_SITE=lax
VITE_ADDITIONAL_CORS_ORIGINS=https://staging.envoyou.com,https://dev.envoyou.com

# API Configuration
VITE_API_BASE_URL=https://api.envoyou.com
VITE_API_VERSION=v1

# App Configuration
VITE_APP_NAME=Envoyou
VITE_APP_DESCRIPTION=Global Environmental Data Verification API

# Analytics (Replace with your actual IDs)
VITE_GA_TRACKING_ID=G-XXXXXXXXXX
VITE_HOTJAR_ID=your-hotjar-id

# Social Media
VITE_GITHUB_URL=https://github.com/hk-dev13/envoyou-page-react.git
VITE_LINKEDIN_URL=https://linkedin.com/company/envoyou
VITE_TWITTER_URL=https://twitter.com/envoyou

# Contact Information
VITE_SUPPORT_EMAIL=support@envoyou.com
VITE_CONTACT_EMAIL=info@envoyou.com

# Development
VITE_NODE_ENV=development
